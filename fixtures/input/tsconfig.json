{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx"
  ],
  "exclude": [
    "./fixtures/**/*.*"
  ]
}

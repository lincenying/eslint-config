{
  "name": "@lincy/eslint-config-monorepo",
  "version": "2.2.0",
  "packageManager": "pnpm@8.4.0",
  "description": "LinCenYing's ESLint config",
  "author": "LinCenYing <lincenying@gmail.com> (https://github.com/lincenying/)",
  "license": "MIT",
  "homepage": "https://github.com/lincenying/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "scripts": {
    "postpublish": "open https://npmmirror.com/package/@lincy/eslint-config",
    "release": "bumpp package.json packages/*/package.json && pnpm publish -r --access public",
    "lint": "eslint . --ext .js,.ts,.json,.json5,.vue,.md --fix"
  },
  "devDependencies": {
    "@lincy/eslint-config": "workspace:*",
    "bumpp": "^9.2.0",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "prettier"
      ]
    }
  }
}

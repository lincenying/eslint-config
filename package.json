{
  "name": "@lincy/eslint-config",
  "type": "module",
  "version": "5.5.0",
  "packageManager": "pnpm@10.6.2",
  "description": "LinCenYing's ESLint config",
  "author": "LinCenYing <lincenying@gmail.com> (https://github.com/lincenying/)",
  "license": "MIT",
  "homepage": "https://github.com/lincenying/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nr typegen && tsup --format esm,cjs --clean --dts",
    "stub": "tsup src/index.ts --format esm",
    "watch": "tsup --format esm,cjs --watch",
    "postpublish": "simple-open-url https://npmmirror.com/package/@lincy/eslint-config",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish -r --access public",
    "test": "vitest",
    "typegen": "tsx scripts/typegen.ts",
    "lint": "pnpm run stub && eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "tsc --noEmit",
    "prepare": "npx simple-git-hooks"
  },
  "peerDependencies": {
    "@eslint-react/eslint-plugin": "^1.15.0",
    "@prettier/plugin-xml": "^3.4.1",
    "@unocss/eslint-plugin": ">=0.50.0",
    "eslint": ">=9.5.0",
    "eslint-plugin-format": ">=0.1.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13"
  },
  "peerDependenciesMeta": {
    "@eslint-react/eslint-plugin": {
      "optional": true
    },
    "@prettier/plugin-xml": {
      "optional": true
    },
    "@unocss/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-format": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-react-refresh": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:",
    "@clack/prompts": "catalog:",
    "@eslint-community/eslint-plugin-eslint-comments": "catalog:",
    "@eslint/markdown": "catalog:",
    "@stylistic/eslint-plugin": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/eslint-plugin": "catalog:",
    "eslint-config-flat-gitignore": "catalog:",
    "eslint-flat-config-utils": "catalog:",
    "eslint-merge-processors": "catalog:",
    "eslint-parser-plain": "catalog:",
    "eslint-plugin-antfu": "catalog:",
    "eslint-plugin-import-x": "catalog:",
    "eslint-plugin-jsdoc": "catalog:",
    "eslint-plugin-jsonc": "catalog:",
    "eslint-plugin-n": "catalog:",
    "eslint-plugin-no-only-tests": "catalog:",
    "eslint-plugin-perfectionist": "catalog:",
    "eslint-plugin-pnpm": "catalog:",
    "eslint-plugin-regexp": "catalog:",
    "eslint-plugin-toml": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "eslint-plugin-yml": "catalog:",
    "eslint-processor-vue-blocks": "catalog:",
    "globals": "catalog:",
    "jsonc-eslint-parser": "catalog:",
    "local-pkg": "catalog:",
    "prompts": "catalog:",
    "toml-eslint-parser": "catalog:",
    "vue-eslint-parser": "catalog:",
    "yaml-eslint-parser": "catalog:"
  },
  "devDependencies": {
    "@antfu/ni": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@eslint-types/jsdoc": "catalog:",
    "@eslint-types/typescript-eslint": "catalog:",
    "@eslint-types/unicorn": "catalog:",
    "@eslint/config-inspector": "catalog:",
    "@lincy/eslint-config": "workspace:*",
    "@prettier/plugin-xml": "catalog:",
    "@stylistic/eslint-plugin-migrate": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@unocss/eslint-plugin": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "eslint-typegen": "catalog:",
    "esno": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:",
    "simple-git-hooks": "catalog:",
    "simple-open-url": "catalog:",
    "sucrase": "catalog:",
    "tinyglobby": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),vue,md}": "eslint --fix"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
